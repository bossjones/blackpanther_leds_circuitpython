# NOTE: Allows you to view python REPL and more
#Turn off Start Message
startup_message off

#Automatically Detach Session
autodetach on

#Use utf8
defutf8 on

#Status Bar and Info Bar

backtick 1 60 60 /usr/bin/whoami

caption always "%{-b gk}%-w%{+b kg}%50>%n %t%{-b gk}%+w%< %= %{y}%1`%{c}@%{m}%H %{w}%D %M %d %{w}%C:%s%a"
hardstatus on
hardstatus alwayslastline "shortcuts: [C-a] c = new <space> = next <backspace> = previous <shift> a = rename d/r = detach, retach :quit = end session"

## set the default shell
#shell bash
defshell -bash      # dash makes it a login shell

defscrollback 50000
# bind k
# bind ^k
# bind .
# bind ^\
# bind \\
# bind ^h
# bind h
# bind 'K' kill
# bind 'I' login on
# bind 'O' login off
# bind '}' history
#
# bind ^] paste [.]

# Allow mouse scrollback
# termcapinfo xterm* ti@:te@
termcapinfo xterm-256color|xterm-color|xterm|xterms|xs|rxvt ti@:te@


# terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
attrcolor b ".I"

term xterm

bind ( eval "writebuf" "exec sh -c 'pbcopy < /tmp/screen-exchange'"
bind ")" eval "exec sh -c 'pbpaste > /tmp/screen-exchange'"

#Use the alternate screen - helps with quiting vim and not messing up current window
altscreen on

# To make underlined text show in color add this to your ~/.screenrc file
attrcolor u "-u R"

# To stop the extraneous underlining, add this to your ~/.screenrc file:
attrcolor d -d

# screens
screen -t 'bash'

